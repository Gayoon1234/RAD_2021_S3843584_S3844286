<h1>Item Selection</h1>
<div class="row">

  <div class="col-sm-6 col-md-4">
    <a href="/items/<%= @item.id%>">
      <div class="thumbnail">
        <img src=<%=@item.image_url %> alt="...">
        <div class="caption">
          <p>
            <%= @item.name %>
          </p>
          <p>$<%= @item.price %>
          </p>
        </div>

      </div>
    </a>
  </div>
    
  <div class="col-sm-6 col-md-4">
    <form method="get" action="/carts/add">
    
    <input type ="hidden" name="itemID" value=<%=@item.id%>>
    
    <h3>Size</h3>
    <select name="size">
        <option >small</option>
        <option >medium</option>
        <option >large</option>
    </select>

    <br>
    
    <h3>Colour</h3>
    <div>
      <input name="colour" type="color" value="#FF00AE">
    </div>
    
    <br>
    
    <div>
    <h3 for="quantity">Quantity (between 1 and 5):</h3>
    <input type="number" id="quantity" name="quantity" min="1" max="5" required>
    </div>
    
    <br>
    
    <div>
    <button type="submit" class="btn btn-default btn-lg">Add To Cart</button>
    </div>
    
    
    </form>

  </div>

</div>